<%=turbo_frame_tag "#{dom_id(user)}_follow" do%>
    <% if following_user %>
        <%= button_to user_follow_path(user),
                method: :delete,
                class: 'follow-button hover:bg-sky-500 hover:text-white' do %>
        <%= content_tag(:span, 'Following', class: 'default-text') +
            content_tag(:span, 'Unfollow', class: 'hover-text') %>
        <% end %>
    <% else %>
        <%= button_to 'Follow', user_follow_path(user),
                class: 'follow-button text-white font-semibold text-sm bg-sky-500' %>
    <% end %>
<% end %>
